                                        {% if tr.telephone !="" and tr.telephone!="0000000" %}
                                            {{ tr.telephone }}
                                        {% endif %}
                                        {% if tr.mobilePhone !="" and tr.mobilePhone!="0000000000" %}
                                            / {{ tr.mobilePhone }}
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Email</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{  tr.email }}</span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Pa√≠s</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{ tr.country }}</span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Ciudad</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                        <span>{{ tr.city }}</span>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- DETAIL TRNASACTION -->
                    <div class="card line" style=" margin-bottom: 40px;">
                        <strong style="
                        text-align: center;
                        margin: 24px 0;"
                                class="text">Detalle de la transacci√≥n</strong>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Descripci√≥n</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{ tr.description}}</span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Referencia ePayco</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{ tr.referencePayco }}</span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Referencia Comercio</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{ tr.bill }}</span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Fecha y hora transacci√≥n</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{ tr.transactionDate }}</span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Medio de pago</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{% if (tr.paymentMethod|length)>0 %} {{ tr.paymentMethod }} {% else %} N/A {% endif %} </span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Banco</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{% if(tr.bank|length)>0 %} {{ tr.bank }} {% else %} N/A {% endif %} </span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Estado</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{ tr.status }}</span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Valor</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>
                                        {% if tr.dollars>0 or tr.paymentMethod == 'PP' %}
                                            ${{ (tr.dollars - (tr.iva_cliente/tr.trmdia))|number_format('2','.',',') }} USD
                                        {% else %}
                                            ${{ tr.amount|number_format('2','.',',') }} {{ tr.currency }}
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>IVA</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>
                                        {% if tr.dollars>0 or tr.paymentMethod == 'PP' %}
                                            ${{ (tr.tax/tr.trmdia)|number_format('2','.',',') }} USD
                                        {% else %}
                                            ${{ (tr.amount - tr.amountNet)|number_format('2','.',',') }} {{ tr.currency }}
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Total</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>
                                        {% if tr.dollars>0 or tr.paymentMethod == 'PP' %}
                                            ${{ tr.dollars|number_format('2','.',',') }} USD
                                        {% else %}
                                            ${{ tr.amount|number_format('2','.',',') }} {{ tr.currency }}
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div style="display: block; padding: 14px " >
                            <div style="display: flex; align-content: space-between; align-items: center">
                                <div style="width: 50%; text-align: left">
                                    <strong>Impoconsumo</strong>
                                </div>
                                <div style="width: 50%; text-align: right">
                                    <span>{{ tr.ipoconsumo|number_format('2','.',',') }}</span>
                                </div>
                            </div>
                        </div>

                        {% if tr.receipt %}
                            <div style="display: block; padding: 14px " >
                                <div style="display: flex; align-content: space-between; align-items: center">
                                    <div style="width: 50%; text-align: left">
                                        <strong>Nro Recibo</strong>
                                    </div>
                                    <div style="width: 50%; text-align: right">
                                        <span>{{ tr.receipt }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if tr.authorization %}
                            <div style="display: block; padding: 14px " >
                                <div style="display: flex; align-content: space-between; align-items: center">
                                    <div style="width: 50%; text-align: left">
                                        <strong>Autorizaci√≥n / CUS</strong>
                                    </div>
                                    <div style="width: 50%; text-align: right">
                                        <span>{{ tr.authorization }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if (tr.dollars>0 or tr.paymentMethod == 'PP') %}
                            <div style="border-bottom: 1px solid #D3D3D3; margin: 20px 0"></div>

                            <div style="display: block; padding: 14px " >
                                <div style="display: flex; align-content: space-between; align-items: center">
                                    <div style="width: 60%; text-align: left">
                                        <strong>TRM <small style="font-size: 10px; font-weight: 100;">
                                                (Tasa Representativa del Mercado)</small>
                                        </strong>
                                    </div>
                                    <div style="width: 40%; text-align: right">
                                        <span>{{ tr.trmdia|number_format('2','.',',') }} COP</span>
                                    </div>
                                </div>
                            </div>

                            <div style="display: block; padding: 14px " >
                                <div style="display: flex; align-content: space-between; align-items: center">
                                    <div style="width: 50%; text-align: left">
                                        <strong>Conversi√≥n</strong>
                                    </div>
                                    <div style="width: 50%; text-align: right">
                                        <span>{{ tr.amount|number_format('2','.',',') }} COP</span>
                                    </div>
                                </div>
                            </div>

                        {% endif %}
                    </div>

                </div>

            </div>

        </td>
    </tr>
    </tbody>
</table>
</body>

</html>
